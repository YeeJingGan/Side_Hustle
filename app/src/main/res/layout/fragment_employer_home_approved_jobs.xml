<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_reactangle_white"
    android:paddingLeft="@dimen/listItemPadding"
    android:paddingTop="@dimen/listItemPadding"
    android:paddingRight="@dimen/listItemPadding"
    android:paddingBottom="@dimen/listItemPadding"
    tools:context=".EmployerHomeApprovedJobsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/employer_home_approved_jobs_listitem_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andika_new_basic_bold"
        android:text="@string/employer_approved_jobs_position"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/employer_home_approved_jobs_wages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rowdies"
        android:text="@string/employer_approved_jobs_wages"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/employer_home_approved_jobs_listitem_position"
        app:layout_constraintTop_toBottomOf="@+id/employer_home_approved_jobs_listitem_position" />

    <ImageView
        android:id="@+id/employer_home_approved_jobs_calendar"
        android:layout_width="@dimen/icon_width_height"
        android:layout_height="@dimen/icon_width_height"
        android:contentDescription="@string/ic_description_approved_date"
        android:src="@drawable/ic_schedule"
        app:layout_constraintStart_toStartOf="@+id/employer_home_approved_jobs_wages"
        app:layout_constraintTop_toBottomOf="@+id/employer_home_approved_jobs_wages"
        app:srcCompat="@drawable/ic_calendar" />

    <TextView
        android:id="@+id/employer_home_approved_jobs_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/andika"
        android:text="@string/employer_approved_jobs_date"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/employer_home_approved_jobs_calendar"
        app:layout_constraintStart_toEndOf="@+id/employer_home_approved_jobs_calendar" />

    <ImageView
        android:id="@+id/employer_home_approved_jobs_schedule"
        android:layout_width="@dimen/icon_width_height"
        android:layout_height="@dimen/icon_width_height"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ic_description_approved_time"
        android:src="@drawable/ic_schedule"
        app:layout_constraintStart_toStartOf="@+id/employer_home_approved_jobs_calendar"
        app:layout_constraintTop_toBottomOf="@+id/employer_home_approved_jobs_calendar"
        app:srcCompat="@drawable/ic_schedule" />

    <TextView
        android:id="@+id/employer_home_approved_jobs_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andika"
        android:text="@string/employer_approved_jobs_time"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/employer_home_approved_jobs_schedule"
        app:layout_constraintStart_toStartOf="@+id/employer_home_approved_jobs_date" />

    <Button
        android:id="@+id/employer_home_approved_jobs_view_details_button"
        android:layout_width="@dimen/button_details_width_height"
        android:layout_height="@dimen/button_width_height"
        android:backgroundTint="@color/themeColor"
        android:paddingLeft="@dimen/buttonPadding"
        android:paddingTop="@dimen/buttonPadding"
        android:paddingRight="@dimen/buttonPadding"
        android:paddingBottom="@dimen/buttonPadding"
        android:text="@string/detailsButton"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/employer_home_approved_jobs_time"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/employer_home_approved_jobs_employee"
        android:layout_width="@dimen/icon_width_height"
        android:layout_height="@dimen/icon_width_height"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/ic_description_applicants_num"
        android:src="@drawable/ic_icon"
        app:layout_constraintEnd_toStartOf="@+id/employer_home_approved_jobs_applicant_num"
        app:layout_constraintTop_toTopOf="@+id/employer_home_approved_jobs_listitem_position"
        app:srcCompat="@drawable/ic_icon" />

    <TextView
        android:id="@+id/employer_home_approved_jobs_applicant_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_reactangle_white"
        android:text="@string/employer_my_jobs_negotiating_applicant_num"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/employer_home_approved_jobs_employee"
        app:layout_constraintEnd_toEndOf="@+id/employer_home_approved_jobs_view_details_button"
        app:layout_constraintTop_toTopOf="@+id/employer_home_approved_jobs_employee" />

</androidx.constraintlayout.widget.ConstraintLayout>