<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!--        TODO: Declare ViewModel variable here-->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EmployerHomeActivity">

        <include
            android:id="@+id/employer_home_include"
            layout="@layout/layout_common_top_search_filter" />

        <ScrollView
            android:id="@+id/employer_home_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            app:layout_constraintBottom_toTopOf="@+id/employer_home_bottom_nav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/employer_home_include">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/employer_home_title_approved_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/title_approved_jobs"
                    app:layout_constraintBottom_toTopOf="@+id/employer_home_divider_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/employer_home_button_expand_1" />

                <ImageButton
                    android:id="@+id/employer_home_button_expand_1"
                    android:layout_width="@dimen/backButtonWidthHeight"
                    android:layout_height="@dimen/button_width_height"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="@string/button_description_expand_less"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_expand_less"
                    app:tint="@color/grey" />

                <View
                    android:id="@+id/employer_home_divider_1"
                    android:layout_width="391dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/employer_home_button_expand_1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/employer_home_recyclerview_approved_jobs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/list_view_constraint"
                    android:layout_marginEnd="16dp"
                    android:clickable="false"
                    android:scrollbars="none"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/employer_home_divider_1"
                    tools:listitem="@layout/fragment_employer_home_approved_jobs"
                    tools:visibility="gone" />

                <TextView
                    android:id="@+id/employer_home_title_pending_approval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/title_pending_approval"
                    app:layout_constraintBottom_toTopOf="@+id/employer_home_divider_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/employer_home_button_expand_2" />

                <ImageButton
                    android:id="@+id/employer_home_button_expand_2"
                    android:layout_width="@dimen/backButtonWidthHeight"
                    android:layout_height="@dimen/backButtonWidthHeight"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="@string/button_description_expand_less"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/employer_home_recyclerview_approved_jobs"
                    app:srcCompat="@drawable/ic_expand"
                    app:tint="@color/grey" />

                <View
                    android:id="@+id/employer_home_divider_2"
                    android:layout_width="391dp"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/employer_home_button_expand_2" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/employer_home_recyclerview_pending_approval"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/list_view_constraint"
                    android:layout_marginEnd="16dp"
                    android:clickable="false"
                    android:dividerHeight="@dimen/listViewDividerHeight"
                    android:scrollbars="none"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/employer_home_divider_2"
                    tools:listitem="@layout/fragment_employer_home_approved_jobs" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <ImageButton
            android:id="@+id/employer_home_button_upload"
            android:layout_width="@dimen/button_width_height"
            android:layout_height="@dimen/button_width_height"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_circle_white"
            android:backgroundTint="@color/theme_color"
            android:contentDescription="@string/button_description_upload_job"
            android:padding="20dp"
            android:src="@drawable/ic_plus"
            app:layout_constraintBottom_toTopOf="@+id/employer_home_bottom_nav"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/black" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/employer_home_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:itemIconSize="30dp"
            app:itemIconTint="@drawable/bottom_nav_item_selector"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="unlabeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
