<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeHistoryFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/employee_history_fragment_circle_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_circle_theme_color" />

    <ImageView
        android:id="@+id/employee_history_fragment_circle_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/employee_history_fragment_circle_1"
        app:layout_constraintEnd_toEndOf="@+id/employee_history_fragment_circle_1"
        app:layout_constraintStart_toStartOf="@+id/employee_history_fragment_circle_1"
        app:layout_constraintTop_toTopOf="@+id/employee_history_fragment_circle_1"
        app:srcCompat="@drawable/background_circle_white" />

    <TextView
        android:id="@+id/employee_history_fragment_total_earning_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/title_total_earnings"
        android:textColor="@color/theme_color"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/employee_history_fragment_circle_2"
        app:layout_constraintStart_toStartOf="@+id/employee_history_fragment_circle_2"
        app:layout_constraintTop_toTopOf="@+id/employee_history_fragment_circle_2" />

    <TextView
        android:id="@+id/employee_history_fragment_earning_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/andika_new_basic_bold"
        android:text="@string/employee_total_earnings"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/employee_history_fragment_circle_2"
        app:layout_constraintStart_toStartOf="@+id/employee_history_fragment_circle_2"
        app:layout_constraintTop_toBottomOf="@+id/employee_history_fragment_total_earning_employee" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employee_history_fragment_circle_1"
        tools:listitem="@layout/fragment_employee_my_jobs_history" />

</androidx.constraintlayout.widget.ConstraintLayout>