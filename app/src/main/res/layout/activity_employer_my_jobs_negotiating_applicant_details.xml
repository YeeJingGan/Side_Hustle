<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="employee"
            type="com.example.sidehustle.EntityEmployee" />
        <variable
            name="job"
            type="com.example.sidehustle.EntityJob" />
        <variable
            name="negotiation"
            type="com.example.sidehustle.EntityNegotiation" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EmployerMyJobsNegotiatingApplicantDetailsActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/employer_my_jobs_negotiating_applicant_details_toolbar"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/theme_color"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/applicants_details_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_constraint_24"
            android:fontFamily="@font/inter_bold"
            android:text="@string/title_applicant_details"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/employer_my_jobs_negotiating_applicant_details_toolbar"
            app:layout_constraintEnd_toEndOf="@+id/employer_my_jobs_negotiating_applicant_details_toolbar"
            app:layout_constraintTop_toTopOf="@+id/employer_my_jobs_negotiating_applicant_details_toolbar" />

        <Button
            android:id="@+id/rejectApplicantButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_rectangle_theme_color"
            android:fontFamily="@font/inter_bold"
            android:includeFontPadding="false"
            android:text="@string/button_text_reject"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/negotiateApplicantButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/negotiateApplicantButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_reactangle_white"
            android:fontFamily="@font/inter_bold"
            android:text="@string/button_text_negotiate"
            android:textColor="@color/theme_color"
            app:layout_constraintEnd_toStartOf="@+id/acceptApplicantButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/rejectApplicantButton"
            app:layout_constraintTop_toTopOf="@+id/rejectApplicantButton" />

        <Button
            android:id="@+id/acceptApplicantButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_rectangle_theme_color"
            android:fontFamily="@font/inter_bold"
            android:text="@string/button_text_accept"
            android:textColor="@android:color/holo_green_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/negotiateApplicantButton"
            app:layout_constraintTop_toTopOf="@+id/negotiateApplicantButton" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/list_item_padding"
            android:paddingTop="@dimen/list_item_padding"
            android:paddingRight="@dimen/list_item_padding"
            android:paddingBottom="@dimen/list_item_padding"
            app:layout_constraintBottom_toTopOf="@+id/negotiateApplicantButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/employer_my_jobs_negotiating_applicant_details_toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/list_item_padding"
                android:paddingTop="@dimen/list_item_padding"
                android:paddingRight="@dimen/list_item_padding"
                android:paddingBottom="@dimen/list_item_padding">

                <ImageView
                    android:id="@+id/applicants_details_applicants_pic"
                    android:layout_width="@dimen/portrait_width_height"
                    android:layout_height="@dimen/portrait_width_height"
                    android:contentDescription="@string/pic_description_applicant_pic"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/applicants_details_applicant_name"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/applicants_details_applicant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_constraint_16"
                    android:fontFamily="@font/andika_new_basic_bold"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="@{employee.employeeUsername}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/employee_details_text_size"
                    app:layout_constraintStart_toEndOf="@+id/applicants_details_applicants_pic"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/applicants_details_applicant_star_1"
                    android:layout_width="@dimen/icon_width_height"
                    android:layout_height="@dimen/icon_width_height"
                    android:contentDescription="@string/title_rating"
                    android:src="@drawable/ic_star_hollow_24px"
                    app:layout_constraintStart_toStartOf="@+id/applicants_details_applicant_name"
                    app:layout_constraintTop_toBottomOf="@+id/applicants_details_applicant_name" />

                <ImageView
                    android:id="@+id/applicants_details_applicant_star_2"
                    android:layout_width="@dimen/icon_width_height"
                    android:layout_height="@dimen/icon_width_height"
                    android:contentDescription="@string/title_rating"
                    android:src="@drawable/ic_star_hollow_24px"
                    app:layout_constraintBottom_toBottomOf="@+id/applicants_details_applicant_star_1"
                    app:layout_constraintStart_toEndOf="@+id/applicants_details_applicant_star_1" />

                <ImageView
                    android:id="@+id/applicants_details_applicant_star_3"
                    android:layout_width="@dimen/icon_width_height"
                    android:layout_height="@dimen/icon_width_height"
                    android:contentDescription="@string/title_rating"
                    android:src="@drawable/ic_star_hollow_24px"
                    app:layout_constraintBottom_toBottomOf="@+id/applicants_details_applicant_star_2"
                    app:layout_constraintStart_toEndOf="@+id/applicants_details_applicant_star_2" />

                <ImageView
                    android:id="@+id/applicants_details_applicant_star_4"
                    android:layout_width="@dimen/icon_width_height"
                    android:layout_height="@dimen/icon_width_height"
                    android:contentDescription="@string/title_rating"
                    android:src="@drawable/ic_star_hollow_24px"
                    app:layout_constraintBottom_toBottomOf="@+id/applicants_details_applicant_star_3"
                    app:layout_constraintStart_toEndOf="@+id/applicants_details_applicant_star_3" />

                <ImageView
                    android:id="@+id/applicants_details_applicant_star_5"
                    android:layout_width="@dimen/icon_width_height"
                    android:layout_height="@dimen/icon_width_height"
                    android:contentDescription="@string/title_rating"
                    android:src="@drawable/ic_star_hollow_24px"
                    app:layout_constraintBottom_toBottomOf="@+id/applicants_details_applicant_star_4"
                    app:layout_constraintStart_toEndOf="@+id/applicants_details_applicant_star_4" />

                <TextView
                    android:id="@+id/applicants_details_applicant_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/andika_new_basic_bold"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="@{job.title}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/employee_details_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/applicants_details_applicants_pic" />

                <ImageView
                    android:id="@+id/applicants_details_money_icon"
                    android:layout_width="@dimen/icon_width_height"
                    android:layout_height="@dimen/icon_width_height"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/ic_description_offered_wages"
                    app:layout_constraintStart_toStartOf="@+id/applicants_details_applicant_position"
                    app:layout_constraintTop_toBottomOf="@+id/applicants_details_applicant_position"
                    app:srcCompat="@drawable/ic_money" />

                <TextView
                    android:id="@+id/applicants_details_applicant_offered_wages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/inter"
                    android:text="@{`RM ` + String.valueOf(negotiation.pay)}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/employee_details_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/applicants_details_money_icon"
                    app:layout_constraintStart_toEndOf="@+id/applicants_details_money_icon" />

                <View
                    android:id="@+id/applicants_details_divider_1"
                    android:layout_width="375dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/applicants_details_money_icon" />

                <TextView
                    android:id="@+id/applicants_details_comment_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/title_comment"
                    android:textSize="@dimen/employee_details_text_size"
                    app:layout_constraintStart_toStartOf="@+id/applicants_details_applicant_position"
                    app:layout_constraintTop_toBottomOf="@+id/applicants_details_divider_1" />

                <TextView
                    android:id="@+id/applicants_details_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/andika"
                    android:text="@{negotiation.comment}"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@+id/applicants_details_money_icon"
                    app:layout_constraintTop_toBottomOf="@+id/applicants_details_comment_header" />

                <View
                    android:id="@+id/applicants_details_divider_3"
                    android:layout_width="375dp"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/applicants_details_comment" />

                <TextView
                    android:id="@+id/applicants_details_languages_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_constraint_8"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/title_languages"
                    android:textSize="@dimen/employee_details_text_size"
                    app:layout_constraintStart_toStartOf="@+id/applicants_details_comment_header"
                    app:layout_constraintTop_toBottomOf="@+id/applicants_details_divider_3" />

                <TextView
                    android:id="@+id/applicant_details_language_title_textview"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/theme_color"
                    android:paddingVertical="10dp"
                    android:text="Language"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toStartOf="@+id/applicant_details_language_proficiency_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/applicants_details_languages_header" />

                <TextView
                    android:id="@+id/applicant_details_language_proficiency_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:background="@color/theme_color"
                    android:paddingVertical="10dp"
                    android:text="Proficiency"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@+id/applicant_details_language_title_textview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/applicant_details_language_title_textview"
                    app:layout_constraintTop_toTopOf="@+id/applicant_details_language_title_textview" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/employer_my_jobs_negotiating_appplicant_details_recyclerview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/applicant_details_language_proficiency_textview"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/applicant_details_language_title_textview"
                    app:layout_constraintTop_toBottomOf="@+id/applicant_details_language_title_textview"
                    tools:listitem="@layout/listitem_employer_my_jobs_applicant_details_languages" />

                <View
                    android:id="@+id/applicants_details_divider_4"
                    android:layout_width="375dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/employer_my_jobs_negotiating_appplicant_details_recyclerview" />

                <TextView
                    android:id="@+id/applicants_details_review_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/title_review_and_comment"
                    android:textSize="@dimen/employee_details_text_size"
                    app:layout_constraintStart_toStartOf="@+id/applicants_details_languages_header"
                    app:layout_constraintTop_toBottomOf="@+id/applicants_details_divider_4" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/employer_my_jobs_negotiating_applicant_details_viewpager"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/employer_my_jobs_negotiating_applicant_details_next_button"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/employer_my_jobs_negotiating_applicant_details_previous_button"
                    app:layout_constraintTop_toBottomOf="@+id/applicants_details_review_header" />

                <ImageButton
                    android:id="@+id/employer_my_jobs_negotiating_applicant_details_previous_button"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:padding="0dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/employer_my_jobs_negotiating_applicant_details_viewpager"
                    app:layout_constraintStart_toStartOf="@+id/applicants_details_review_header"
                    app:layout_constraintTop_toTopOf="@+id/employer_my_jobs_negotiating_applicant_details_viewpager"
                    app:srcCompat="@drawable/ic_chevron_left_24px"
                    tools:visibility="invisible" />

                <ImageButton
                    android:id="@+id/employer_my_jobs_negotiating_applicant_details_next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:padding="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/employer_my_jobs_negotiating_applicant_details_viewpager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/employer_my_jobs_negotiating_applicant_details_viewpager"
                    app:srcCompat="@drawable/ic_chevron_right_24px"
                    tools:visibility="visible" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <ImageButton
            android:id="@+id/employer_my_jobs_negotiating_applicant_details_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/employer_my_jobs_negotiating_applicant_details_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_white_36px" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>