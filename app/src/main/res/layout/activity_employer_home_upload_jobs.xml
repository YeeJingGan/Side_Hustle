<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_reactangle_white"
    tools:context=".EmployerHomeUploadJobsActivity">

    <include
        android:id="@+id/include11"
        layout="@layout/common_back_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/upload_job_title_job_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_constraint_24"
        android:fontFamily="@font/inter_bold"
        android:text="@string/title_job_details"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/include11"
        app:layout_constraintEnd_toEndOf="@+id/include11"
        app:layout_constraintTop_toTopOf="@+id/include11" />

    <Button
        android:id="@+id/upload_job_submit_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rectangle_theme_color"
        android:fontFamily="@font/inter_bold"
        android:text="@string/button_text_submit"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/upload_job_reset_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/upload_job_reset_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_reactangle_white"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/inter_bold"
        android:text="@string/button_text_reset"
        android:textColor="@color/themeColor"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/upload_job_submit_button" />

    <TextView
        android:id="@+id/upload_jobs_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_constraint_24"
        android:layout_marginTop="@dimen/common_constraint_16"
        android:fontFamily="@font/inter_bold"
        android:text="@string/instruction_upload_jobs"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include11" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/upload_job_submit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_jobs_instruction"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/upload_job_input_job_title"
                android:layout_width="@dimen/upload_jobs_info_box_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/upload_jobs_input_box"
                android:ems="10"
                android:focusedByDefault="true"
                android:fontFamily="@font/inter"
                android:hint="@string/hint_input_job_title"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/upload_job_title_job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
                android:layout_marginTop="@dimen/upload_jobs_constraint_14"
                android:background="@drawable/background_reactangle_white"
                android:fontFamily="@font/inter"
                android:paddingLeft="@dimen/uploadJobsInputTittlePadding"
                android:paddingRight="@dimen/uploadJobsInputTittlePadding"
                android:text="@string/title_job_title"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_job_title"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/upload_job_input_wages"
                android:layout_width="@dimen/upload_jobs_info_box_width"
                android:layout_height="@dimen/upload_jobs_info_box_height"
                android:layout_marginTop="@dimen/common_constraint_24"
                android:background="@drawable/upload_jobs_input_box"
                android:fontFamily="@font/inter"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_job_title"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_job_title"
                tools:text="RM ??" />

            <TextView
                android:id="@+id/upload_job_title_wages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
                android:layout_marginTop="@dimen/upload_jobs_constraint_14"
                android:background="@drawable/background_reactangle_white"
                android:fontFamily="@font/inter"
                android:paddingLeft="@dimen/uploadJobsInputTittlePadding"
                android:paddingRight="@dimen/uploadJobsInputTittlePadding"
                android:text="@string/title_wages"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_wages"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_job_title" />

            <ImageButton
                android:id="@+id/upload_job_button_minus"
                android:layout_width="@dimen/backButtonWidthHeight"
                android:layout_height="@dimen/backButtonWidthHeight"
                android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/button_description_minus"
                app:layout_constraintBottom_toBottomOf="@+id/upload_job_input_wages"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_wages"
                app:layout_constraintTop_toTopOf="@+id/upload_job_input_wages"
                app:srcCompat="@drawable/ic_minus"
                app:tint="@color/themeColor" />

            <ImageButton
                android:id="@+id/upload_job_button_plus"
                android:layout_width="@dimen/backButtonWidthHeight"
                android:layout_height="@dimen/backButtonWidthHeight"
                android:layout_marginEnd="@dimen/uploadJobsInputTittleConstraint"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/button_description_plus"
                app:layout_constraintBottom_toBottomOf="@+id/upload_job_input_wages"
                app:layout_constraintEnd_toEndOf="@+id/upload_job_input_wages"
                app:layout_constraintTop_toTopOf="@+id/upload_job_input_wages"
                app:srcCompat="@drawable/ic_plus"
                app:tint="@color/themeColor" />

            <TextView
                android:id="@+id/upload_job_input_date"
                android:layout_width="@dimen/upload_jobs_info_box_width"
                android:layout_height="@dimen/dateTimeBoxHieght"
                android:layout_marginTop="@dimen/common_constraint_24"
                android:background="@drawable/upload_jobs_input_box"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_wages"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_wages" />

            <TextView
                android:id="@+id/upload_job_title_working_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
                android:layout_marginTop="@dimen/upload_jobs_constraint_14"
                android:background="@drawable/background_reactangle_white"
                android:fontFamily="@font/inter"
                android:paddingLeft="@dimen/uploadJobsInputTittlePadding"
                android:paddingRight="@dimen/uploadJobsInputTittlePadding"
                android:text="@string/title_working_date"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_date"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_wages" />

            <ImageView
                android:id="@+id/upload_job_ic_calendar"
                android:layout_width="@dimen/icon_width_height"
                android:layout_height="@dimen/icon_width_height"
                android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/grey"
                android:contentDescription="@string/title_working_date"
                app:layout_constraintBottom_toBottomOf="@+id/upload_job_input_start_date"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_date"
                app:layout_constraintTop_toTopOf="@+id/upload_job_input_start_date"
                app:srcCompat="@drawable/ic_calendar" />

            <EditText
                android:id="@+id/upload_job_input_start_date"
                android:layout_width="@dimen/dateInput"
                android:layout_height="@dimen/backButtonWidthHeight"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/themeColor"
                android:ems="10"
                android:hint="@string/hint_input_date"
                android:inputType="datetime|date"
                android:paddingBottom="2dp"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/upload_job_ic_calendar"
                app:layout_constraintTop_toTopOf="@+id/upload_job_input_date" />

            <EditText
                android:id="@+id/upload_job_input_end_date"
                android:layout_width="@dimen/dateInput"
                android:layout_height="@dimen/backButtonWidthHeight"
                android:layout_marginEnd="@dimen/uploadJobsInputTittleConstraint"
                android:backgroundTint="@color/themeColor"
                android:ems="10"
                android:hint="@string/hint_input_date"
                android:inputType="date"
                android:paddingBottom="2dp"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/upload_job_input_start_date"
                app:layout_constraintEnd_toEndOf="@+id/upload_job_input_date" />

            <TextView
                android:id="@+id/upload_job_title_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="@string/title_to"
                android:textColor="@color/themeColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/upload_job_input_start_date"
                app:layout_constraintEnd_toStartOf="@+id/upload_job_input_end_date"
                app:layout_constraintStart_toEndOf="@+id/upload_job_input_start_date"
                app:layout_constraintTop_toTopOf="@+id/upload_job_input_start_date" />

            <CheckBox
                android:id="@+id/upload_job_title_one_day"
                android:layout_width="@dimen/one_day_check_box_width"
                android:layout_height="@dimen/button_width_height"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/inter"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:text="@string/title_one_day"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/upload_job_input_date"
                app:layout_constraintEnd_toEndOf="@+id/upload_job_input_date" />

            <TextView
                android:id="@+id/upload_job_input_time"
                android:layout_width="@dimen/upload_jobs_info_box_width"
                android:layout_height="@dimen/upload_jobs_info_box_height"
                android:layout_marginTop="@dimen/common_constraint_24"
                android:background="@drawable/upload_jobs_input_box"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_date"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_date" />

            <TextView
                android:id="@+id/upload_job_title_working_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
                android:layout_marginTop="@dimen/upload_jobs_constraint_14"
                android:background="@drawable/background_reactangle_white"
                android:fontFamily="@font/inter"
                android:paddingLeft="@dimen/uploadJobsInputTittlePadding"
                android:paddingRight="@dimen/uploadJobsInputTittlePadding"
                android:text="@string/title_working_time"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_time"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_date" />

            <ImageView
                android:id="@+id/upload_job_ic_schedule"
                android:layout_width="@dimen/icon_width_height"
                android:layout_height="@dimen/icon_width_height"
                android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
                android:contentDescription="@string/ic_description_approved_time"
                app:layout_constraintBottom_toBottomOf="@+id/upload_job_input_time"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_time"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_title_working_time"
                app:srcCompat="@drawable/ic_schedule" />

            <EditText
                android:id="@+id/upload_job_input_start_time"
                android:layout_width="@dimen/dateInput"
                android:layout_height="@dimen/backButtonWidthHeight"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/themeColor"
                android:ems="10"
                android:hint="@string/time"
                android:inputType="time"
                android:paddingBottom="2dp"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/upload_job_input_time"
                app:layout_constraintStart_toEndOf="@+id/upload_job_ic_schedule"
                app:layout_constraintTop_toTopOf="@+id/upload_job_input_time"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/upload_job_input_end_time"
                android:layout_width="@dimen/dateInput"
                android:layout_height="@dimen/backButtonWidthHeight"
                android:layout_marginEnd="@dimen/uploadJobsInputTittleConstraint"
                android:backgroundTint="@color/themeColor"
                android:ems="10"
                android:hint="@string/time"
                android:inputType="time"
                android:paddingBottom="2dp"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/upload_job_input_start_time"
                app:layout_constraintEnd_toEndOf="@+id/upload_job_input_time" />

            <TextView
                android:id="@+id/upload_job_title_to_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="@string/title_to"
                android:textColor="@color/themeColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/upload_job_input_start_time"
                app:layout_constraintEnd_toStartOf="@+id/upload_job_input_end_time"
                app:layout_constraintStart_toEndOf="@+id/upload_job_input_start_time"
                app:layout_constraintTop_toTopOf="@+id/upload_job_input_start_time" />

            <TextView
                android:id="@+id/upload_job_input_address"
                android:layout_width="@dimen/upload_jobs_info_box_width"
                android:layout_height="@dimen/addressInputBoxHeight"
                android:layout_marginTop="@dimen/common_constraint_24"
                android:background="@drawable/upload_jobs_input_box"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_time"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_time" />

            <TextView
                android:id="@+id/upload_job_title_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
                android:layout_marginTop="@dimen/upload_jobs_constraint_14"
                android:background="@drawable/background_reactangle_white"
                android:fontFamily="@font/inter"
                android:paddingLeft="@dimen/uploadJobsInputTittlePadding"
                android:paddingRight="@dimen/uploadJobsInputTittlePadding"
                android:text="@string/title_address"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_address"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_time" />

            <EditText
                android:id="@+id/upload_job_input_address_line_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/addressInputHeight"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/themeColor"
                android:ems="10"
                android:hint="@string/hint_input_address_1"
                android:inputType="text"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/upload_job_input_address"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_address"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_title_address" />

            <EditText
                android:id="@+id/upload_job_input_address_line_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/addressInputHeight"
                android:backgroundTint="@color/themeColor"
                android:ems="10"
                android:hint="@string/hint_input_address_2"
                android:inputType="text"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/upload_job_input_address_line_1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_address_line_1"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_address_line_1" />

            <EditText
                android:id="@+id/upload_job_input_postcode"
                android:layout_width="0dp"
                android:layout_height="@dimen/addressInputHeight"
                android:backgroundTint="@color/themeColor"
                android:ems="10"
                android:hint="@string/hint_input_postcode"
                android:inputType="textPostalAddress"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/upload_job_input_address_line_2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_address_line_2"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_address_line_2" />

            <Spinner
                android:id="@+id/upload_job_input_state"
                android:layout_width="0dp"
                android:layout_height="@dimen/addressInputHeight"
                app:layout_constraintEnd_toEndOf="@+id/upload_job_input_postcode"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_postcode"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_postcode" />

            <TextView
                android:id="@+id/upload_job_input_url"
                android:layout_width="@dimen/upload_jobs_info_box_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_constraint_24"
                android:background="@drawable/upload_jobs_input_box"
                android:hint="@string/hint_input_url"
                android:textColor="@color/grey"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_address"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_address" />

            <TextView
                android:id="@+id/upload_job_title_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
                android:layout_marginTop="@dimen/upload_jobs_constraint_14"
                android:background="@drawable/background_reactangle_white"
                android:fontFamily="@font/inter"
                android:paddingLeft="@dimen/uploadJobsInputTittlePadding"
                android:paddingRight="@dimen/uploadJobsInputTittlePadding"
                android:text="@string/title_location_url"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_url"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_address" />

            <TextView
                android:id="@+id/upload_job_input_requirement"
                android:layout_width="@dimen/upload_jobs_info_box_width"
                android:layout_height="@dimen/upload_jobs_info_box_height"
                android:layout_marginTop="@dimen/common_constraint_24"
                android:background="@drawable/upload_jobs_input_box"
                app:layout_constraintStart_toEndOf="@+id/upload_job_input_url"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_url"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_url" />

            <TextView
                android:id="@+id/upload_job_title_requirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
                android:layout_marginTop="@dimen/upload_jobs_constraint_14"
                android:background="@drawable/background_reactangle_white"
                android:fontFamily="@font/inter"
                android:paddingLeft="@dimen/uploadJobsInputTittlePadding"
                android:paddingRight="@dimen/uploadJobsInputTittlePadding"
                android:text="@string/title_requirements"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_requirement"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_url" />

            <ImageButton
                android:id="@+id/upload_job_button_add"
                android:layout_width="@dimen/icon_width_height"
                android:layout_height="@dimen/icon_width_height"
                android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
                android:backgroundTint="@android:color/transparent"
                android:clickable="false"
                android:contentDescription="Back"
                app:layout_constraintBottom_toBottomOf="@+id/upload_job_input_requirement"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_requirement"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_title_requirement"
                app:srcCompat="@drawable/ic_plus"
                app:tint="@color/themeColor" />

            <EditText
                android:id="@+id/upload_job_tv_requirement"
                android:layout_width="0dp"
                android:layout_height="@dimen/addressInputHeight"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/themeColor"
                android:fontFamily="@font/inter"
                android:hint="@string/hint_input_requirement"
                android:paddingBottom="2dp"
                android:text="@string/hint_input_requirement"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@+id/upload_job_input_requirement"
                app:layout_constraintHorizontal_bias="0.118"
                app:layout_constraintStart_toEndOf="@+id/upload_job_button_add"
                app:layout_constraintTop_toTopOf="@+id/upload_job_input_requirement" />

            <EditText
                android:id="@+id/upload_job_input_description"
                android:layout_width="@dimen/upload_jobs_info_box_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_constraint_24"
                android:layout_marginBottom="24dp"
                android:background="@drawable/upload_jobs_input_box"
                android:hint="@string/hint_input_description"
                android:inputType="textShortMessage"
                android:textColor="@color/grey"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/upload_job_input_requirement"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_requirement"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_requirement" />

            <TextView
                android:id="@+id/upload_job_title_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
                android:layout_marginTop="@dimen/upload_jobs_constraint_14"
                android:background="@drawable/background_reactangle_white"
                android:fontFamily="@font/inter"
                android:paddingLeft="@dimen/uploadJobsInputTittlePadding"
                android:paddingRight="@dimen/uploadJobsInputTittlePadding"
                android:text="@string/title_description"
                app:layout_constraintStart_toStartOf="@+id/upload_job_input_description"
                app:layout_constraintTop_toBottomOf="@+id/upload_job_input_requirement" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>