<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployerMyJobsNegotiatingApplicantsListApplicantDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/applicants_details_toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/themeColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/applicants_details_backButton"
        android:layout_width="@dimen/backButtonWidthHeight"
        android:layout_height="@dimen/backButtonWidthHeight"
        android:layout_marginStart="@dimen/backButtonConstraint"
        android:layout_marginTop="@dimen/backButtonConstraint"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="@+id/applicants_details_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/applicants_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/backButtonConstraint"
        android:fontFamily="@font/inter_bold"
        android:text="@string/applicantDetails"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/applicants_details_toolbar"
        app:layout_constraintEnd_toEndOf="@+id/applicants_details_toolbar"
        app:layout_constraintTop_toTopOf="@+id/applicants_details_toolbar" />

    <Button
        android:id="@+id/rejectApplicantButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rectangle_theme_color"
        android:fontFamily="@font/inter_bold"
        android:includeFontPadding="false"
        android:text="@string/rejectButton"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/negotiateApplicantButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/negotiateApplicantButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_reactangle_white"
        android:fontFamily="@font/inter_bold"
        android:text="@string/negotiateButton"
        android:textColor="@color/themeColor"
        app:layout_constraintEnd_toStartOf="@+id/acceptApplicantButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rejectApplicantButton"
        app:layout_constraintTop_toTopOf="@+id/rejectApplicantButton" />

    <Button
        android:id="@+id/acceptApplicantButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rectangle_theme_color"
        android:fontFamily="@font/inter_bold"
        android:text="@string/acceptButton"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/negotiateApplicantButton"
        app:layout_constraintTop_toTopOf="@+id/negotiateApplicantButton" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/listItemPadding"
        android:paddingTop="@dimen/listItemPadding"
        android:paddingRight="@dimen/listItemPadding"
        android:paddingBottom="@dimen/listItemPadding"
        app:layout_constraintBottom_toTopOf="@+id/negotiateApplicantButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/applicants_details_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/listItemPadding"
            android:paddingTop="@dimen/listItemPadding"
            android:paddingRight="@dimen/listItemPadding"
            android:paddingBottom="@dimen/listItemPadding">

            <ImageView
                android:id="@+id/applicants_details_applicants_pic"
                android:layout_width="@dimen/listItemPictureWidthHeight"
                android:layout_height="@dimen/listItemPictureWidthHeight"
                app:layout_constraintBottom_toBottomOf="@+id/applicants_details_view_resume_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/applicants_details_applicant_name"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/applicants_details_applicant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/andika_new_basic_bold"
                android:paddingLeft="4dp"
                android:text="@string/applicantName"
                android:textColor="@color/black"
                android:textSize="@dimen/employee_details_text_size"
                app:layout_constraintStart_toEndOf="@+id/applicants_details_applicants_pic"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/applicants_details_applicant_star_1"
                android:layout_width="@dimen/alarmIconWidthHeight"
                android:layout_height="@dimen/alarmIconWidthHeight"
                android:src="@drawable/ic_star"
                app:layout_constraintStart_toStartOf="@+id/applicants_details_applicant_name"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_applicant_name" />

            <ImageView
                android:id="@+id/applicants_details_applicant_star_2"
                android:layout_width="@dimen/alarmIconWidthHeight"
                android:layout_height="@dimen/alarmIconWidthHeight"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@+id/applicants_details_applicant_star_1"
                app:layout_constraintStart_toEndOf="@+id/applicants_details_applicant_star_1" />

            <ImageView
                android:id="@+id/applicants_details_applicant_star_3"
                android:layout_width="@dimen/alarmIconWidthHeight"
                android:layout_height="@dimen/alarmIconWidthHeight"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@+id/applicants_details_applicant_star_2"
                app:layout_constraintStart_toEndOf="@+id/applicants_details_applicant_star_2" />

            <ImageView
                android:id="@+id/applicants_details_applicant_star_4"
                android:layout_width="@dimen/alarmIconWidthHeight"
                android:layout_height="@dimen/alarmIconWidthHeight"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@+id/applicants_details_applicant_star_3"
                app:layout_constraintStart_toEndOf="@+id/applicants_details_applicant_star_3" />

            <ImageView
                android:id="@+id/applicants_details_applicant_star_5"
                android:layout_width="@dimen/alarmIconWidthHeight"
                android:layout_height="@dimen/alarmIconWidthHeight"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@+id/applicants_details_applicant_star_4"
                app:layout_constraintStart_toEndOf="@+id/applicants_details_applicant_star_4" />

            <Button
                android:id="@+id/applicants_details_view_resume_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:backgroundTint="@color/themeColor"
                android:text="@string/viewResume"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/applicants_details_applicant_star_1"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_applicant_star_3" />

            <TextView
                android:id="@+id/applicants_details_applicant_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/listViewConstraint"
                android:fontFamily="@font/andika_new_basic_bold"
                android:paddingLeft="4dp"
                android:text="@string/applicantPosition"
                android:textColor="@color/black"
                android:textSize="@dimen/employee_details_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_view_resume_button" />

            <ImageView
                android:id="@+id/applicants_details_money_icon"
                android:layout_width="@dimen/alarmIconWidthHeight"
                android:layout_height="@dimen/alarmIconWidthHeight"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/applicants_details_applicant_position"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_applicant_position"
                app:srcCompat="@drawable/ic_money" />

            <TextView
                android:id="@+id/applicants_details_applicant_offered_wages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inter"
                android:text="@string/applicantsWagesOffered"
                android:textColor="@color/black"
                android:textSize="@dimen/employee_details_text_size"
                app:layout_constraintBottom_toBottomOf="@+id/applicants_details_money_icon"
                app:layout_constraintStart_toEndOf="@+id/applicants_details_money_icon" />

            <View
                android:id="@+id/applicants_details_divider_1"
                android:layout_width="375dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_money_icon" />

            <TextView
                android:id="@+id/applicants_details_comment_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/comment"
                android:textSize="@dimen/employee_details_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_divider_1" />

            <TextView
                android:id="@+id/applicants_details_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/andika"
                android:text="@string/employee_comment_for_employer"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/applicants_details_comment_header"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_comment_header" />

            <View
                android:id="@+id/applicants_details_divider_2"
                android:layout_width="375dp"
                android:layout_height="1dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_comment" />

            <TextView
                android:id="@+id/applicants_details_document_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/supportingDocument"
                android:textSize="@dimen/employee_details_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_divider_2" />

            <Button
                android:id="@+id/applicants_details_supporting_docuemnt_view_button"
                android:layout_width="@dimen/backButtonWidthHeight"
                android:layout_height="@dimen/backButtonWidthHeight"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_pdf"
                android:contentDescription="pdf"
                app:layout_constraintStart_toStartOf="@+id/applicants_details_document_header"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_document_header" />

            <View
                android:id="@+id/applicants_details_divider_3"
                android:layout_width="375dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_supporting_docuemnt_view_button" />

            <TextView
                android:id="@+id/applicants_details_languages_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/languages"
                android:textSize="@dimen/employee_details_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_divider_3" />

            <TableLayout
                android:id="@+id/applicants_details_tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/applicants_details_languages_header"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_languages_header">

                <TableRow
                    android:id="@+id/applicants_details_table_row_1"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextView
                        android:id="@+id/applicants_details_languages_header_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_rectangle_theme_color"
                        android:fontFamily="@font/inter"
                        android:paddingLeft="@dimen/listItemPadding"
                        android:paddingTop="@dimen/listItemPadding"
                        android:paddingRight="@dimen/listItemPadding"
                        android:paddingBottom="@dimen/listItemPadding"
                        android:text="@string/languages"
                        android:textColor="@color/white"
                        android:textSize="@dimen/employee_details_text_size" />

                    <TextView
                        android:id="@+id/applicants_details_proficiency_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_reactangle_white"
                        android:fontFamily="@font/inter"
                        android:paddingLeft="@dimen/listItemPadding"
                        android:paddingTop="@dimen/listItemPadding"
                        android:paddingRight="@dimen/listItemPadding"
                        android:paddingBottom="@dimen/listItemPadding"
                        android:text="@string/proficiency"
                        android:textColor="@color/themeColor"
                        android:textSize="@dimen/employee_details_text_size"
                        app:layout_constraintBottom_toBottomOf="@+id/applicants_details_table_row_1"
                        app:layout_constraintStart_toEndOf="@+id/applicants_details_table_row_1"
                        app:layout_constraintTop_toTopOf="@+id/applicants_details_table_row_1" />
                </TableRow>


                <TableRow
                    android:id="@+id/applicants_details_table_row_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/applicants_details_languages_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_reactangle_white"
                        android:fontFamily="@font/inter"
                        android:paddingLeft="@dimen/listItemPadding"
                        android:paddingTop="@dimen/listItemPadding"
                        android:paddingRight="@dimen/listItemPadding"
                        android:paddingBottom="@dimen/listItemPadding"
                        android:text="@string/employee_details_language_value"
                        android:textColor="@color/themeColor"
                        android:textSize="@dimen/employee_details_text_size"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/applicants_details_proficiency_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_rectangle_theme_color"
                        android:fontFamily="@font/inter"
                        android:paddingLeft="@dimen/listItemPadding"
                        android:paddingTop="@dimen/listItemPadding"
                        android:paddingRight="@dimen/listItemPadding"
                        android:paddingBottom="@dimen/listItemPadding"
                        android:text="@string/proficiencyValue"
                        android:textColor="@color/white"
                        android:textSize="@dimen/employee_details_text_size"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="@+id/applicants_details_proficiency_header"
                        app:layout_constraintStart_toEndOf="@+id/applicants_details_proficiency_header"
                        app:layout_constraintTop_toTopOf="@+id/applicants_details_proficiency_header" />
                </TableRow>

            </TableLayout>

            <View
                android:id="@+id/applicants_details_divider_4"
                android:layout_width="375dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_tableLayout" />

            <TextView
                android:id="@+id/applicants_details_review_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/reviewAndComment"
                android:textSize="@dimen/employee_details_text_size"
                app:layout_constraintStart_toStartOf="@+id/applicants_details_divider_4"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_divider_4" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager2_2"
                android:layout_width="0dp"
                android:layout_height="1500dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="#FF0000"
                app:layout_constraintEnd_toStartOf="@+id/imageButton2_2"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintStart_toEndOf="@+id/imageButton_1"
                app:layout_constraintTop_toBottomOf="@+id/applicants_details_review_header" />

            <ImageButton
                android:id="@+id/imageButton_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/viewPager2_2"
                app:layout_constraintStart_toStartOf="@+id/applicants_details_review_header"
                app:layout_constraintTop_toTopOf="@+id/viewPager2_2"
                app:srcCompat="@drawable/ic_minus"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/imageButton2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/viewPager2_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/viewPager2_2"
                app:srcCompat="@drawable/ic_plus" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>