<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeHomeJobDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/employee_home_job_details_toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/themeColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/employee_home_job_details_backButton"
        android:layout_width="@dimen/backButtonWidthHeight"
        android:layout_height="@dimen/backButtonWidthHeight"
        android:layout_marginStart="8dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="Back"
        app:layout_constraintBottom_toBottomOf="@+id/employee_home_job_details_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/employee_home_job_details_jobDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/jobDetails"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/employee_home_job_details_toolbar"
        app:layout_constraintEnd_toEndOf="@+id/employee_home_job_details_toolbar"
        app:layout_constraintTop_toTopOf="@+id/employee_home_job_details_toolbar" />

    <Button
        android:id="@+id/employee_home_job_details_close_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/submitButtonHeight"
        android:background="@drawable/background_rectangle_theme_color"
        android:fontFamily="@font/inter_bold"
        android:text="@string/applyNegotiate"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/employee_home_job_details_delete_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/employee_home_job_details_delete_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/submitButtonHeight"
        android:background="@drawable/background_reactangle_white"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/favourite"
        android:fontFamily="@font/inter_bold"
        android:src="@drawable/ic_favourite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/employee_home_job_details_close_button"
        app:tint="@android:color/holo_red_light" />

    <ImageView
        android:id="@+id/employee_me_jobs_jobs_detail_pic"
        android:layout_width="@dimen/listItemPictureWidthHeight"
        android:layout_height="@dimen/listItemPictureWidthHeight"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employee_home_job_details_toolbar"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/employee_job_details_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/inter"
        android:text="@string/jobDetailsCompanyName"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/employee_me_jobs_jobs_detail_pic"
        app:layout_constraintTop_toTopOf="@+id/employee_me_jobs_jobs_detail_pic" />

    <ImageView
        android:id="@+id/employee_job_details_company_location_pin"
        android:layout_width="@dimen/alarmIconWidthHeight"
        android:layout_height="@dimen/alarmIconWidthHeight"
        app:layout_constraintBottom_toTopOf="@+id/employee_job_details_star_1"
        app:layout_constraintStart_toStartOf="@+id/employee_job_details_company_name"
        app:layout_constraintTop_toBottomOf="@+id/employee_job_details_company_name"
        app:srcCompat="@drawable/ic_location" />

    <TextView
        android:id="@+id/employee_job_details_company_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/inter"
        android:text="@string/jobDetailsCompanyLocation"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/employee_job_details_company_location_pin"
        app:layout_constraintStart_toEndOf="@+id/employee_job_details_company_location_pin" />

    <ImageView
        android:id="@+id/employee_job_details_star_1"
        android:layout_width="@dimen/alarmIconWidthHeight"
        android:layout_height="@dimen/alarmIconWidthHeight"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/employee_me_jobs_jobs_detail_pic"
        app:layout_constraintStart_toStartOf="@+id/employee_job_details_company_location_pin" />

    <ImageView
        android:id="@+id/employee_job_details_star_2"
        android:layout_width="@dimen/alarmIconWidthHeight"
        android:layout_height="@dimen/alarmIconWidthHeight"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/employee_job_details_star_1"
        app:layout_constraintStart_toEndOf="@+id/employee_job_details_star_1" />

    <ImageView
        android:id="@+id/employee_job_details_star_3"
        android:layout_width="@dimen/alarmIconWidthHeight"
        android:layout_height="@dimen/alarmIconWidthHeight"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/employee_job_details_star_2"
        app:layout_constraintStart_toEndOf="@+id/employee_job_details_star_2" />

    <ImageView
        android:id="@+id/employee_job_details_star_4"
        android:layout_width="@dimen/alarmIconWidthHeight"
        android:layout_height="@dimen/alarmIconWidthHeight"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/employee_job_details_star_3"
        app:layout_constraintStart_toEndOf="@+id/employee_job_details_star_3" />

    <ImageView
        android:id="@+id/employee_job_details_star_5"
        android:layout_width="@dimen/alarmIconWidthHeight"
        android:layout_height="@dimen/alarmIconWidthHeight"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/employee_job_details_star_4"
        app:layout_constraintStart_toEndOf="@+id/employee_job_details_star_4" />

    <TextView
        android:id="@+id/employee_job_details_offered_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/applyNegotiateConstraint"
        android:fontFamily="@font/andika_new_basic_bold"
        android:paddingLeft="4dp"
        android:text="@string/applicantPosition"
        android:textColor="@color/black"
        android:textSize="@dimen/employee_details_text_size"
        app:layout_constraintStart_toStartOf="@+id/employee_me_jobs_jobs_detail_pic"
        app:layout_constraintTop_toBottomOf="@+id/employee_me_jobs_jobs_detail_pic" />

    <ImageView
        android:id="@+id/employee_job_details_money_icon"
        android:layout_width="@dimen/alarmIconWidthHeight"
        android:layout_height="@dimen/alarmIconWidthHeight"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/employee_job_details_offered_position"
        app:layout_constraintTop_toBottomOf="@+id/employee_job_details_offered_position"
        app:srcCompat="@drawable/ic_money" />

    <ImageView
        android:id="@+id/employee_jobs_details_calendar_icon"
        android:layout_width="@dimen/alarmIconWidthHeight"
        android:layout_height="@dimen/alarmIconWidthHeight"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/employee_job_details_money_icon"
        app:layout_constraintTop_toBottomOf="@+id/employee_job_details_money_icon"
        app:srcCompat="@drawable/ic_calendar" />

    <ImageView
        android:id="@+id/employee_job_details_schedule_icon"
        android:layout_width="@dimen/alarmIconWidthHeight"
        android:layout_height="@dimen/alarmIconWidthHeight"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/employee_jobs_details_calendar_icon"
        app:layout_constraintTop_toBottomOf="@+id/employee_jobs_details_calendar_icon"
        app:srcCompat="@drawable/ic_schedule" />

    <TextView
        android:id="@+id/employee_job_details_offered_wages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/inter"
        android:text="@string/company_initial_offered_wages"
        app:layout_constraintBottom_toBottomOf="@+id/employee_job_details_money_icon"
        app:layout_constraintStart_toEndOf="@+id/employee_job_details_money_icon" />

    <TextView
        android:id="@+id/employee_job_details_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="@string/approvedJobsDate"
        app:layout_constraintBottom_toBottomOf="@+id/employee_jobs_details_calendar_icon"
        app:layout_constraintStart_toStartOf="@+id/employee_job_details_offered_wages" />

    <TextView
        android:id="@+id/employee_job_details_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="@string/approvedJobsTime"
        app:layout_constraintBottom_toBottomOf="@+id/employee_job_details_schedule_icon"
        app:layout_constraintStart_toStartOf="@+id/employee_job_details_date" />

    <View
        android:id="@+id/employee_job_details_div_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employee_job_details_schedule_icon" />

    <TextView
        android:id="@+id/employee_job_details_requirement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="@string/requirements"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/employee_job_details_div_1"
        app:layout_constraintTop_toBottomOf="@+id/employee_job_details_div_1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/employee_job_details_container_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/employee_job_details_div_1"
        app:layout_constraintStart_toStartOf="@+id/employee_job_details_div_1"
        app:layout_constraintTop_toBottomOf="@+id/employee_job_details_requirement">

        <ImageView
            android:id="@+id/employee_job_details_check_box"
            android:layout_width="@dimen/alarmIconWidthHeight"
            android:layout_height="@dimen/alarmIconWidthHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_check_box" />

        <TextView
            android:id="@+id/employee_job_details_requirement_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/companyRequirement"
            app:layout_constraintBottom_toBottomOf="@+id/employee_job_details_check_box"
            app:layout_constraintStart_toEndOf="@+id/employee_job_details_check_box"
            app:layout_constraintTop_toTopOf="@+id/employee_job_details_check_box" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/employee_job_details_div_2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@+id/employee_job_details_div_1"
        app:layout_constraintStart_toStartOf="@+id/employee_job_details_div_1"
        app:layout_constraintTop_toBottomOf="@+id/employee_job_details_container_1" />

    <TextView
        android:id="@+id/employee_job_details_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="@string/description"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/employee_job_details_requirement"
        app:layout_constraintTop_toBottomOf="@+id/employee_job_details_div_2" />

    <TextView
        android:id="@+id/employee_job_details_job_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="@string/job_description_value"
        app:layout_constraintStart_toStartOf="@+id/employee_job_details_description"
        app:layout_constraintTop_toBottomOf="@+id/employee_job_details_description" />

</androidx.constraintlayout.widget.ConstraintLayout>