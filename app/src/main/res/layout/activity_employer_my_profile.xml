<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployerMyProfileActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_profile_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:contentInsetLeft="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/side_hustle_yellow_background"
        app:title="@string/my_profile_txt"
        app:titleMarginStart="30dp"
        app:titleTextAppearance="@style/toolbar_text_style" />

    <ImageView
        android:id="@+id/my_profile_profile_avatar"
        android:layout_width="@dimen/my_profile_photo_size"
        android:layout_height="@dimen/my_profile_photo_size"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_toolbar"
        app:srcCompat="@drawable/sample_profile_photo" />

    <TextView
        android:id="@+id/my_profile_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/my_profile_toolbar_margin"
        android:fontFamily="@font/inter"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/my_profile_profile_avatar"
        app:layout_constraintStart_toStartOf="@+id/my_profile_profile_avatar"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_profile_avatar"
        tools:text="@string/my_profile_name_txt" />

    <ImageView
        android:id="@+id/my_profile_star_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/my_profile_star_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_profile_name"
        app:srcCompat="@drawable/ic_star_24px" />

    <ImageView
        android:id="@+id/my_profile_star_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/my_profile_star_1"
        app:layout_constraintEnd_toStartOf="@+id/my_profile_star_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/my_profile_star_1"
        app:srcCompat="@drawable/ic_star_24px" />

    <ImageView
        android:id="@+id/my_profile_star_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/my_profile_star_2"
        app:layout_constraintEnd_toStartOf="@+id/my_profile_star_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/my_profile_star_2"
        app:srcCompat="@drawable/ic_star_24px" />

    <ImageView
        android:id="@+id/my_profile_star_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/my_profile_star_3"
        app:layout_constraintEnd_toStartOf="@+id/my_profile_star_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/my_profile_star_3"
        app:srcCompat="@drawable/ic_star_24px" />

    <ImageView
        android:id="@+id/my_profile_star_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/my_profile_star_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/my_profile_star_4"
        app:srcCompat="@drawable/ic_star_24px" />

    <View
        android:id="@+id/my_profile_divider_1"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_star_3" />

    <ImageButton
        android:id="@+id/my_profile_settings_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_my_profile_rounded_corner"
        android:backgroundTint="@android:color/white"
        android:contentDescription="@string/settings_txt"
        android:padding="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_divider_1"
        app:srcCompat="@drawable/ic_settings_50px" />

    <TextView
        android:id="@+id/my_profile_settings_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter"
        android:text="@string/settings_txt"
        app:layout_constraintEnd_toEndOf="@+id/my_profile_settings_icon"
        app:layout_constraintStart_toStartOf="@+id/my_profile_settings_icon"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_settings_icon" />

    <View
        android:id="@+id/my_profile_divider_2"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_settings_textview" />

    <TextView
        android:id="@+id/my_profile_reviews_comments_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter"
        android:text="@string/reviews_comments_txt"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_divider_2" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/my_profile_viewpager2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/my_profile_divider_3"
        app:layout_constraintEnd_toStartOf="@+id/my_profile_next_review_button"
        app:layout_constraintStart_toEndOf="@+id/my_profile_previous_review_button"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_reviews_comments_textview">
    </androidx.viewpager2.widget.ViewPager2>

    <View
        android:id="@+id/my_profile_divider_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/footerDividerHeight"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/my_profile_previous_review_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="@android:color/transparent"
        android:padding="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/my_profile_viewpager2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_profile_viewpager2"
        app:srcCompat="@drawable/ic_chevron_left_24px" />

    <ImageButton
        android:id="@+id/my_profile_next_review_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/transparent"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/my_profile_viewpager2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_profile_viewpager2"
        app:srcCompat="@drawable/ic_chevron_right_24px" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/employer_my_profile_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/bottom_nav_item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>