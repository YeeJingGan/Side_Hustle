<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_reactangle_white"
    tools:context=".EmployerNegotiateWithEmployeeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/employer_negotiate_with_employee_toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/themeColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/employer_negotiate_with_employee_backButton"
        android:layout_width="@dimen/backButtonWidthHeight"
        android:layout_height="@dimen/backButtonWidthHeight"
        android:layout_marginStart="8dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="Back"
        app:layout_constraintBottom_toBottomOf="@+id/employer_negotiate_with_employee_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/employer_negotiate_with_employee_negotiate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/negotiate"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/employer_negotiate_with_employee_toolbar"
        app:layout_constraintEnd_toEndOf="@+id/employer_negotiate_with_employee_toolbar"
        app:layout_constraintTop_toTopOf="@+id/employer_negotiate_with_employee_toolbar" />

    <Button
        android:id="@+id/employer_negotiate_with_employee_offer_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/submitButtonHeight"
        android:background="@drawable/background_rectangle_theme_color"
        android:fontFamily="@font/inter_bold"
        android:text="@string/offerButton"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/employer_negotiate_with_employee_reset_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/employer_negotiate_with_employee_reset_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/submitButtonHeight"
        android:background="@drawable/background_reactangle_white"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/inter_bold"
        android:text="@string/resetButton"
        android:textColor="@color/themeColor"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/employer_negotiate_with_employee_offer_button" />

    <TextView
        android:id="@+id/employer_negotiate_with_employee_wages_input"
        android:layout_width="@dimen/uploadJobsInfoBoxWidth"
        android:layout_height="@dimen/uploadJobsInfoBoxHeight"
        android:layout_marginTop="@dimen/listItemPositionConstraint"
        android:background="@drawable/upload_jobs_input_box"
        android:fontFamily="@font/inter"
        android:text="@string/employerWagesOfferred"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_negotiate_with_employee_toolbar" />

    <TextView
        android:id="@+id/employer_negotiate_with_employee_wages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
        android:layout_marginBottom="@dimen/uploadJobsInputTittleConstraint"
        android:background="@drawable/background_reactangle_white"
        android:fontFamily="@font/inter"
        android:paddingLeft="@dimen/uploadJobsInputTittlePadding"
        android:paddingRight="@dimen/uploadJobsInputTittlePadding"
        android:text="@string/offeredPay"
        app:layout_constraintBottom_toBottomOf="@+id/employer_negotiate_with_employee_wages_input"
        app:layout_constraintStart_toStartOf="@+id/employer_negotiate_with_employee_wages_input" />

    <ImageButton
        android:id="@+id/employer_negotiate_with_employee_minus_button"
        android:layout_width="@dimen/backButtonWidthHeight"
        android:layout_height="@dimen/backButtonWidthHeight"
        android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="reduce"
        app:layout_constraintBottom_toBottomOf="@+id/employer_negotiate_with_employee_wages_input"
        app:layout_constraintStart_toStartOf="@+id/employer_negotiate_with_employee_wages_input"
        app:layout_constraintTop_toTopOf="@+id/employer_negotiate_with_employee_wages_input"
        app:srcCompat="@drawable/ic_minus"
        app:tint="@color/themeColor" />

    <ImageButton
        android:id="@+id/employer_negotiate_with_employee_plus_button"
        android:layout_width="@dimen/backButtonWidthHeight"
        android:layout_height="@dimen/backButtonWidthHeight"
        android:layout_marginEnd="@dimen/uploadJobsInputTittleConstraint"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="increase"
        app:layout_constraintBottom_toBottomOf="@+id/employer_negotiate_with_employee_wages_input"
        app:layout_constraintEnd_toEndOf="@+id/employer_negotiate_with_employee_wages_input"
        app:layout_constraintTop_toTopOf="@+id/employer_negotiate_with_employee_wages_input"
        app:srcCompat="@drawable/ic_plus"
        app:tint="@color/themeColor" />


    <EditText
        android:id="@+id/employer_negotiate_with_employee_comment_input"
        android:layout_width="@dimen/uploadJobsInfoBoxWidth"
        android:layout_height="@dimen/uploadJobsInfoBoxHeight"
        android:layout_marginTop="@dimen/uploadJobsInputTittleConstraint"
        android:background="@drawable/upload_jobs_input_box"
        android:ems="10"
        android:focusedByDefault="true"
        android:fontFamily="@font/inter"
        android:hint="@string/commentHint"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_negotiate_with_employee_wages_input" />

    <TextView
        android:id="@+id/employer_negotiate_with_employee_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
        android:layout_marginBottom="@dimen/uploadJobsInputTittleConstraint"
        android:background="@drawable/background_reactangle_white"
        android:fontFamily="@font/inter"
        android:paddingLeft="@dimen/uploadJobsInputTittlePadding"
        android:paddingRight="@dimen/uploadJobsInputTittlePadding"
        android:text="@string/comment"
        app:layout_constraintBottom_toBottomOf="@+id/employer_negotiate_with_employee_comment_input"
        app:layout_constraintStart_toStartOf="@+id/employer_negotiate_with_employee_comment_input" />

</androidx.constraintlayout.widget.ConstraintLayout>