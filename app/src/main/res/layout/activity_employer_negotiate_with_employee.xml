<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_reactangle_white"
    tools:context=".EmployerNegotiateWithEmployeeActivity">

    <include
        android:id="@+id/include15"
        layout="@layout/common_back_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/employer_negotiate_with_employee_negotiate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_constraint_24"
        android:fontFamily="@font/inter_bold"
        android:text="@string/title_negotiate"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/include15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include15" />

    <Button
        android:id="@+id/employer_negotiate_with_employee_offer_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rectangle_theme_color"
        android:fontFamily="@font/inter_bold"
        android:text="@string/button_text_offer"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/employer_negotiate_with_employee_reset_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/employer_negotiate_with_employee_reset_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_reactangle_white"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/inter_bold"
        android:text="@string/button_text_reset"
        android:textColor="@color/theme_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/employer_negotiate_with_employee_offer_button" />

    <TextView
        android:id="@+id/employer_negotiate_with_employee_wages_input"
        android:layout_width="@dimen/upload_jobs_info_box_width"
        android:layout_height="@dimen/upload_jobs_info_box_height"
        android:layout_marginTop="@dimen/listItemPositionConstraint"
        android:background="@drawable/background_upload_jobs_input_box"
        android:fontFamily="@font/inter"
        android:text="@string/hint_negotiate_wages"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include15" />

    <TextView
        android:id="@+id/employer_negotiate_with_employee_wages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
        android:layout_marginBottom="@dimen/uploadJobsInputTittleConstraint"
        android:background="@drawable/background_reactangle_white"
        android:fontFamily="@font/inter"
        android:paddingLeft="@dimen/uploadJobsInputTittlePadding"
        android:paddingRight="@dimen/uploadJobsInputTittlePadding"
        android:text="@string/title_offered_pay"
        app:layout_constraintBottom_toBottomOf="@+id/employer_negotiate_with_employee_wages_input"
        app:layout_constraintStart_toStartOf="@+id/employer_negotiate_with_employee_wages_input" />

    <ImageButton
        android:id="@+id/employer_negotiate_with_employee_minus_button"
        android:layout_width="@dimen/backButtonWidthHeight"
        android:layout_height="@dimen/backButtonWidthHeight"
        android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/button_description_minus"
        app:layout_constraintBottom_toBottomOf="@+id/employer_negotiate_with_employee_wages_input"
        app:layout_constraintStart_toStartOf="@+id/employer_negotiate_with_employee_wages_input"
        app:layout_constraintTop_toTopOf="@+id/employer_negotiate_with_employee_wages_input"
        app:srcCompat="@drawable/ic_minus"
        app:tint="@color/theme_color" />

    <ImageButton
        android:id="@+id/employer_negotiate_with_employee_plus_button"
        android:layout_width="@dimen/backButtonWidthHeight"
        android:layout_height="@dimen/backButtonWidthHeight"
        android:layout_marginEnd="@dimen/uploadJobsInputTittleConstraint"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/button_description_plus"
        app:layout_constraintBottom_toBottomOf="@+id/employer_negotiate_with_employee_wages_input"
        app:layout_constraintEnd_toEndOf="@+id/employer_negotiate_with_employee_wages_input"
        app:layout_constraintTop_toTopOf="@+id/employer_negotiate_with_employee_wages_input"
        app:srcCompat="@drawable/ic_plus"
        app:tint="@color/theme_color" />


    <EditText
        android:id="@+id/employer_negotiate_with_employee_comment_input"
        android:layout_width="@dimen/upload_jobs_info_box_width"
        android:layout_height="@dimen/upload_jobs_info_box_height"
        android:layout_marginTop="@dimen/uploadJobsInputTittleConstraint"
        android:background="@drawable/background_upload_jobs_input_box"
        android:ems="10"
        android:focusedByDefault="true"
        android:fontFamily="@font/inter"
        android:hint="@string/hint_comment"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_negotiate_with_employee_wages_input" />

    <TextView
        android:id="@+id/employer_negotiate_with_employee_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/uploadJobsInputTittleConstraint"
        android:layout_marginBottom="@dimen/uploadJobsInputTittleConstraint"
        android:background="@drawable/background_reactangle_white"
        android:fontFamily="@font/inter"
        android:paddingLeft="@dimen/uploadJobsInputTittlePadding"
        android:paddingRight="@dimen/uploadJobsInputTittlePadding"
        android:text="@string/title_comment"
        app:layout_constraintBottom_toBottomOf="@+id/employer_negotiate_with_employee_comment_input"
        app:layout_constraintStart_toStartOf="@+id/employer_negotiate_with_employee_comment_input" />

</androidx.constraintlayout.widget.ConstraintLayout>