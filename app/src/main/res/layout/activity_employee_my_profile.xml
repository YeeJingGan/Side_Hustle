<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:contentDescription="@string/settings_txt"
    tools:context=".EmployeeMyProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/themeColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/side_hustle_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_photo_margin"
        android:contentDescription="@string/side_hustle_icon_description"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/side_hustle_yellow_background" />

    <TextView
        android:id="@+id/my_profile_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/my_profile_toolbar_margin"
        android:fontFamily="@font/inter_bold"
        android:text="@string/my_profile_txt"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toEndOf="@+id/side_hustle_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/my_profile_txt" />

    <include layout="@layout/layout_common_bottom" />

    <ImageView
        android:id="@+id/my_profile_profile_avatar"
        android:layout_width="@dimen/my_profile_photo_size"
        android:layout_height="@dimen/my_profile_photo_size"
        android:layout_marginTop="@dimen/my_profile_photo_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/sample_profile_photo" />

    <TextView
        android:id="@+id/my_profile_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/my_profile_toolbar_margin"
        android:fontFamily="@font/inter"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/my_profile_profile_avatar"
        app:layout_constraintStart_toStartOf="@+id/my_profile_profile_avatar"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_profile_avatar"
        tools:text="@string/my_profile_name_txt" />

    <ImageView
        android:id="@+id/my_profile_edit_name_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/employee_home_job_list_textview_margin"
        app:layout_constraintBottom_toBottomOf="@+id/my_profile_profile_name"
        app:layout_constraintStart_toEndOf="@+id/my_profile_profile_name"
        app:layout_constraintTop_toTopOf="@+id/my_profile_profile_name"
        app:srcCompat="@drawable/border_colo_24px" />

    <ImageView
        android:id="@+id/my_profile_star_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/my_profile_star_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_profile_name"
        app:srcCompat="@drawable/star_24px" />

    <ImageView
        android:id="@+id/my_profile_star_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/my_profile_star_1"
        app:layout_constraintEnd_toStartOf="@+id/my_profile_star_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/my_profile_star_1"
        app:srcCompat="@drawable/star_24px" />

    <ImageView
        android:id="@+id/my_profile_star_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/my_profile_star_2"
        app:layout_constraintEnd_toStartOf="@+id/my_profile_star_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/my_profile_star_2"
        app:srcCompat="@drawable/star_24px" />

    <ImageView
        android:id="@+id/my_profile_star_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/my_profile_star_3"
        app:layout_constraintEnd_toStartOf="@+id/my_profile_star_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/my_profile_star_3"
        app:srcCompat="@drawable/star_24px" />

    <ImageView
        android:id="@+id/my_profile_star_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/my_profile_star_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/my_profile_star_4"
        app:srcCompat="@drawable/star_24px" />

    <View
        android:id="@+id/my_profile_divider_1"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_star_3" />

    <ImageButton
        android:id="@+id/my_profile_settings_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_my_profile_rounded_corner"
        android:backgroundTint="@android:color/white"
        android:contentDescription="@string/settings_txt"
        android:padding="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/my_profile_upload_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/my_profile_upload_icon"
        app:srcCompat="@drawable/settings_50px" />

    <ImageButton
        android:id="@+id/my_profile_upload_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_my_profile_rounded_corner"
        android:backgroundTint="@android:color/white"
        android:contentDescription="@string/upload_resume_txt"
        android:padding="9dp"
        app:layout_constraintEnd_toStartOf="@+id/my_profile_settings_icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_divider_1"
        app:srcCompat="@drawable/upload_file_50px" />

    <TextView
        android:id="@+id/my_profile_upload_resume_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter"
        android:text="@string/upload_resume_txt"
        app:layout_constraintEnd_toEndOf="@+id/my_profile_upload_icon"
        app:layout_constraintStart_toStartOf="@+id/my_profile_upload_icon"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_upload_icon" />

    <TextView
        android:id="@+id/my_profile_settings_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter"
        android:text="@string/settings_txt"
        app:layout_constraintEnd_toEndOf="@+id/my_profile_settings_icon"
        app:layout_constraintStart_toStartOf="@+id/my_profile_settings_icon"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_settings_icon" />

    <View
        android:id="@+id/my_profile_divider_2"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_upload_resume_textview" />

    <TextView
        android:id="@+id/my_profile_reviews_comments_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter"
        android:text="@string/reviews_comments_txt"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_divider_2" />

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="409dp"
        android:layout_height="265dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="465dp" />

</androidx.constraintlayout.widget.ConstraintLayout>