<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployerMyJobsEmployeeDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/employer_my_jobs_employee_details_toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/themeColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/employer_my_jobs_employee_details_backButton"
        android:layout_width="@dimen/backButtonWidthHeight"
        android:layout_height="@dimen/backButtonWidthHeight"
        android:layout_marginStart="@dimen/backButtonConstraint"
        android:layout_marginTop="@dimen/backButtonConstraint"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="@+id/employer_my_jobs_employee_details_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/employer_my_jobs_ongoing_employee_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/backButtonConstraint"
        android:fontFamily="@font/inter_bold"
        android:text="@string/employeeDetails"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/employer_my_jobs_employee_details_toolbar"
        app:layout_constraintEnd_toEndOf="@+id/employer_my_jobs_employee_details_toolbar"
        app:layout_constraintTop_toTopOf="@+id/employer_my_jobs_employee_details_toolbar" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/listItemPadding"
        android:paddingTop="@dimen/listItemPadding"
        android:paddingRight="@dimen/listItemPadding"
        android:paddingBottom="@dimen/listItemPadding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_my_jobs_employee_details_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/listItemPadding"
            android:paddingTop="@dimen/listItemPadding"
            android:paddingRight="@dimen/listItemPadding"
            android:paddingBottom="@dimen/listItemPadding">

            <ImageView
                android:id="@+id/employer_my_jobs_employee_details_employee_pic"
                android:layout_width="@dimen/listItemPictureWidthHeight"
                android:layout_height="@dimen/listItemPictureWidthHeight"
                app:layout_constraintBottom_toBottomOf="@+id/employee_details_view_resume_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/employer_my_jobs_employee_details_employee_name"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/employer_my_jobs_employee_details_employee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/andika_new_basic_bold"
                android:paddingLeft="4dp"
                android:text="@string/employeeName"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/employer_my_jobs_employee_details_employee_pic"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/employer_my_jobs_employee_details_star_1"
                android:layout_width="@dimen/alarmIconWidthHeight"
                android:layout_height="@dimen/alarmIconWidthHeight"
                android:src="@drawable/star_icon"
                app:layout_constraintStart_toStartOf="@+id/employer_my_jobs_employee_details_employee_name"
                app:layout_constraintTop_toBottomOf="@+id/employer_my_jobs_employee_details_employee_name" />

            <ImageView
                android:id="@+id/employer_my_jobs_employee_details_star_2"
                android:layout_width="@dimen/alarmIconWidthHeight"
                android:layout_height="@dimen/alarmIconWidthHeight"
                android:src="@drawable/star_icon"
                app:layout_constraintBottom_toBottomOf="@+id/employer_my_jobs_employee_details_star_1"
                app:layout_constraintStart_toEndOf="@+id/employer_my_jobs_employee_details_star_1" />

            <ImageView
                android:id="@+id/employer_my_jobs_employee_details_star_3"
                android:layout_width="@dimen/alarmIconWidthHeight"
                android:layout_height="@dimen/alarmIconWidthHeight"
                android:src="@drawable/star_icon"
                app:layout_constraintBottom_toBottomOf="@+id/employer_my_jobs_employee_details_star_2"
                app:layout_constraintStart_toEndOf="@+id/employer_my_jobs_employee_details_star_2" />

            <ImageView
                android:id="@+id/employer_my_jobs_employee_details_star_4"
                android:layout_width="@dimen/alarmIconWidthHeight"
                android:layout_height="@dimen/alarmIconWidthHeight"
                android:src="@drawable/star_icon"
                app:layout_constraintBottom_toBottomOf="@+id/employer_my_jobs_employee_details_star_3"
                app:layout_constraintStart_toEndOf="@+id/employer_my_jobs_employee_details_star_3" />

            <ImageView
                android:id="@+id/employer_my_jobs_employee_details_star_5"
                android:layout_width="@dimen/alarmIconWidthHeight"
                android:layout_height="@dimen/alarmIconWidthHeight"
                android:src="@drawable/star_icon"
                app:layout_constraintBottom_toBottomOf="@+id/employer_my_jobs_employee_details_star_4"
                app:layout_constraintStart_toEndOf="@+id/employer_my_jobs_employee_details_star_4" />

            <Button
                android:id="@+id/employee_details_view_resume_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:backgroundTint="@color/themeColor"
                android:text="@string/viewResume"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/employer_my_jobs_employee_details_star_1"
                app:layout_constraintTop_toBottomOf="@+id/employer_my_jobs_employee_details_star_3" />

            <TextView
                android:id="@+id/employer_my_jobs_employee_details_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/listViewConstraint"
                android:fontFamily="@font/andika_new_basic_bold"
                android:paddingLeft="4dp"
                android:text="@string/employeeDetailsPosition"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/employee_details_view_resume_button" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/alarmIconWidthHeight"
                android:layout_height="@dimen/alarmIconWidthHeight"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/employer_my_jobs_employee_details_position"
                app:layout_constraintTop_toBottomOf="@+id/employer_my_jobs_employee_details_position"
                app:srcCompat="@drawable/money_icon" />

            <TextView
                android:id="@+id/employer_my_jobs_employee_details_employee_wages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inter"
                android:text="@string/finalWages"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toEndOf="@+id/imageView" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>