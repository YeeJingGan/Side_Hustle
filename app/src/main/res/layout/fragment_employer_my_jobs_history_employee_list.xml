<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_reactangle_white"
    android:paddingLeft="@dimen/listItemPadding"
    android:paddingTop="@dimen/listItemPadding"
    android:paddingRight="@dimen/listItemPadding"
    android:paddingBottom="@dimen/listItemPadding"
    tools:context=".EmployerMyJobsHistoryEmployeeListFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/history_employee_pic"
        android:layout_width="@dimen/listItemPictureWidthHeight"
        android:layout_height="@dimen/listItemPictureWidthHeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/history_employee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/andika"
        android:text="@string/employeeName"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/history_employee_pic"
        app:layout_constraintTop_toTopOf="@+id/history_employee_pic" />

    <TextView
        android:id="@+id/history_employee_wages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rowdies"
        android:text="@string/finalWages"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/history_employee_name"
        app:layout_constraintTop_toBottomOf="@+id/history_employee_name" />

    <ImageView
        android:id="@+id/comment_rating_star_1"
        android:layout_width="@dimen/alarmIconWidthHeight"
        android:layout_height="@dimen/alarmIconWidthHeight"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/history_employee_pic"
        app:layout_constraintStart_toStartOf="@+id/history_employee_wages"
        app:layout_constraintTop_toBottomOf="@+id/history_employee_wages" />

    <ImageView
        android:id="@+id/comment_rating_star_2"
        android:layout_width="@dimen/alarmIconWidthHeight"
        android:layout_height="@dimen/alarmIconWidthHeight"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/comment_rating_star_1"
        app:layout_constraintStart_toEndOf="@+id/comment_rating_star_1" />

    <ImageView
        android:id="@+id/comment_rating_star_3"
        android:layout_width="@dimen/alarmIconWidthHeight"
        android:layout_height="@dimen/alarmIconWidthHeight"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/comment_rating_star_2"
        app:layout_constraintStart_toEndOf="@+id/comment_rating_star_2" />

    <ImageView
        android:id="@+id/comment_rating_star_4"
        android:layout_width="@dimen/alarmIconWidthHeight"
        android:layout_height="@dimen/alarmIconWidthHeight"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/comment_rating_star_3"
        app:layout_constraintStart_toEndOf="@+id/comment_rating_star_3" />

    <ImageView
        android:id="@+id/comment_rating_star_5"
        android:layout_width="@dimen/alarmIconWidthHeight"
        android:layout_height="@dimen/alarmIconWidthHeight"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/comment_rating_star_4"
        app:layout_constraintStart_toEndOf="@+id/comment_rating_star_4" />

    <Button
        android:id="@+id/employer_history_view_employee_details_button"
        android:layout_width="@dimen/detailButtonWidth"
        android:layout_height="@dimen/detailButttonHeight"
        android:backgroundTint="@color/themeColor"
        android:paddingLeft="@dimen/buttonPadding"
        android:paddingTop="@dimen/buttonPadding"
        android:paddingRight="@dimen/buttonPadding"
        android:paddingBottom="@dimen/buttonPadding"
        android:text="@string/detailsButton"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/history_employee_pic"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/commentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/commented"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/employer_history_view_employee_details_button"
        app:layout_constraintTop_toTopOf="@+id/history_employee_name" />

</androidx.constraintlayout.widget.ConstraintLayout>