            app:layout_constraintTop_toBottomOf="@+id/main_button_8" />

        <Button
            android:id="@+id/main_button_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer Settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_button_9" />

        <Button
            android:id="@+id/main_button_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer Negotiating Applicant Details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_button_10" />

        <Button
            android:id="@+id/main_button_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer Ongoing Employee Details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_button_11" />

        <Button
            android:id="@+id/main_button_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Employee Setting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_button_12" />

        <Button
            android:id="@+id/main_button_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee My Jobs"
            app:layout_constraintStart_toStartOf="@+id/main_button_13"
            app:layout_constraintTop_toBottomOf="@+id/main_button_13" />

        <Button
            android:id="@+id/main_button_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer My Jobs"
            app:layout_constraintStart_toStartOf="@+id/main_button_14"
            app:layout_constraintTop_toBottomOf="@+id/main_button_14" />
