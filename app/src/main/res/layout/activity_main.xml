<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/my_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employer My Jobs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/my_butt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employer Post Job"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_butt" />

    <Button
        android:id="@+id/mybut3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="employee_list"
        app:layout_constraintEnd_toEndOf="@+id/my_butt2"
        app:layout_constraintStart_toStartOf="@+id/my_butt2"
        app:layout_constraintTop_toBottomOf="@+id/my_butt2" />

    <Button
        android:id="@+id/mybut4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee Details"
        app:layout_constraintEnd_toEndOf="@+id/mybut3"
        app:layout_constraintStart_toStartOf="@+id/mybut3"
        app:layout_constraintTop_toBottomOf="@+id/mybut3" />

</androidx.constraintlayout.widget.ConstraintLayout>