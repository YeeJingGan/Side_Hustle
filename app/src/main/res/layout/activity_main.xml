            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_button_4" />

        <Button
            android:id="@+id/main_button_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer Home Job Details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_button_5" />

        <Button
            android:id="@+id/main_button_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer Upload Jobs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_button_6" />

        <Button
            android:id="@+id/main_button_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer My Jobs History Comment Rating"
            app:layout_constraintStart_toStartOf="parent"
