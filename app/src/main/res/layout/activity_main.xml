<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/side_hustle_main_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_search_rounded_corner"
            android:backgroundTint="@color/theme_color"
            android:paddingHorizontal="10dp"
            android:text="Employee Home"
            app:layout_constraintBottom_toTopOf="@+id/side_hustle_main_button_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/side_hustle_main_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_search_rounded_corner"
            android:backgroundTint="@color/theme_color"
            android:paddingHorizontal="10dp"
            android:text="Employer Home"
            app:layout_constraintBottom_toTopOf="@+id/side_hustle_main_button_3"
            app:layout_constraintEnd_toEndOf="@+id/side_hustle_main_button_1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/side_hustle_main_button_1"
            app:layout_constraintTop_toBottomOf="@+id/side_hustle_main_button_1" />

        <Button
            android:id="@+id/side_hustle_main_button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_search_rounded_corner"
            android:backgroundTint="@color/theme_color"
            android:paddingHorizontal="10dp"
            android:text="Admin Home"
            app:layout_constraintBottom_toTopOf="@+id/side_hustle_main_button_4"
            app:layout_constraintEnd_toEndOf="@+id/side_hustle_main_button_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/side_hustle_main_button_2"
            app:layout_constraintTop_toBottomOf="@+id/side_hustle_main_button_2" />

        <Button
            android:id="@+id/side_hustle_main_button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_search_rounded_corner"
            android:backgroundTint="@color/theme_color"
            android:paddingHorizontal="10dp"
            android:text="Login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/side_hustle_main_button_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/side_hustle_main_button_3"
            app:layout_constraintTop_toBottomOf="@+id/side_hustle_main_button_3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>