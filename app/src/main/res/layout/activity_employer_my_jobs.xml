<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EmployerMyJobsActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/employer_my_jobs_ongoing_toolbar"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/theme_color"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/employer_home_apply_jobs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/my_jobs_txt"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/employer_my_jobs_ongoing_toolbar"
            app:layout_constraintEnd_toEndOf="@+id/employer_my_jobs_ongoing_toolbar"
            app:layout_constraintTop_toTopOf="@+id/employer_my_jobs_ongoing_toolbar" />

        <ImageView
            android:id="@+id/employer_my_jobs_ongoing_portrait"
            android:layout_width="@dimen/toolbar_picture_size"
            android:layout_height="@dimen/toolbar_picture_size"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_circle_white"
            android:contentDescription="@string/profile_avatar_description"
            app:layout_constraintBottom_toBottomOf="@+id/employer_my_jobs_ongoing_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/employer_my_jobs_ongoing_toolbar"
            app:srcCompat="@drawable/sample_profile_photo" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/employer_my_jobs_ongoing_tab_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_reactangle_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/employer_my_jobs_ongoing_toolbar"
            app:tabIndicatorColor="@color/theme_color"
            app:tabIndicatorFullWidth="true"
            app:tabSelectedTextColor="@color/theme_color"
            app:tabTextColor="@color/grey">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/employer_my_jobs_ongoing_ongoing_tab"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="85dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_text_ongoing" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/employer_my_jobs_ongoing_negotiating_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_text_negotiating" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/employer_my_jobs_ongoing_history_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_text_history" />

        </com.google.android.material.tabs.TabLayout>

        <ScrollView
            android:id="@+id/employer_my_jobs_ongoing_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/employer_my_jobs_ongoing_bottom_nav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/employer_my_jobs_ongoing_tab_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"></androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/employer_my_jobs_view_pager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/employer_my_jobs_ongoing_scrollview"
            app:layout_constraintEnd_toEndOf="@+id/employer_my_jobs_ongoing_scrollview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/employer_my_jobs_ongoing_tab_layout" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/employer_my_jobs_ongoing_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:itemIconSize="30dp"
            app:itemIconTint="@drawable/bottom_nav_item_selector"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="unlabeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>