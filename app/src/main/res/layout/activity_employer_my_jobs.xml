<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackground"
    tools:context=".EmployerMyJobsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/employee_home_toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/themeColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_avatar"
        android:layout_width="@dimen/toolbar_picture_size"
        android:layout_height="@dimen/toolbar_picture_size"
        android:layout_marginStart="@dimen/toolbar_photo_margin"
        android:layout_marginTop="@dimen/toolbar_photo_margin"
        android:background="@drawable/circle_white_background"
        android:contentDescription="@string/profile_avatar_description"
        app:layout_constraintStart_toEndOf="@+id/employee_home_toolbar"
        app:layout_constraintStart_toStartOf="@+id/employee_home_toolbar"
        app:layout_constraintTop_toTopOf="@+id/employee_home_toolbar"
        app:srcCompat="@drawable/sample_profile_photo" />

    <EditText
        android:id="@+id/search_edit_text"
        android:layout_width="@dimen/toolbar_search_width"
        android:layout_height="@dimen/toolbar_search_height"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:hint="@string/employee_toolbar_search_hint"
        android:inputType="text"
        android:paddingStart="@dimen/padding_start"
        android:paddingEnd="@dimen/padding_start"
        android:textSize="@dimen/toolbar_search_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/employee_home_toolbar"
        app:layout_constraintEnd_toStartOf="@+id/toolbar_filter_button"
        app:layout_constraintStart_toEndOf="@+id/profile_avatar"
        app:layout_constraintTop_toTopOf="@+id/employee_home_toolbar" />

    <ImageButton
        android:id="@+id/toolbar_filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:src="@drawable/baseline_tune_24"
        app:layout_constraintBottom_toBottomOf="@+id/search_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/search_edit_text"
        app:layout_constraintTop_toTopOf="@+id/search_edit_text" />

    <View
        android:id="@+id/employer_my_jobs_footer_divider"
        android:layout_width="@dimen/footerDividerWidth"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/footerDividerHeight"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="@dimen/iconWidthHeight"
        android:layout_height="@dimen/iconWidthHeight"
        android:background="@android:color/transparent"
        android:contentDescription="@string/homeButtonDescription"
        app:layout_constraintEnd_toStartOf="@+id/my_jobs_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_my_jobs_footer_divider"
        app:srcCompat="@drawable/home_icon"
        app:tint="@color/grey" />

    <ImageButton
        android:id="@+id/my_jobs_button"
        android:layout_width="@dimen/iconWidthHeight"
        android:layout_height="@dimen/iconWidthHeight"
        android:background="@android:color/transparent"
        android:contentDescription="@string/myJobsButtonDescription"
        app:layout_constraintBottom_toBottomOf="@+id/home_button"
        app:layout_constraintEnd_toStartOf="@+id/my_profile_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/home_button"
        app:srcCompat="@drawable/myjobs_icon"
        app:tint="@color/themeColor" />

    <ImageButton
        android:id="@+id/my_profile_button"
        android:layout_width="@dimen/iconWidthHeight"
        android:layout_height="@dimen/iconWidthHeight"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/myProfileButtonDescription"
        app:layout_constraintBottom_toBottomOf="@+id/my_jobs_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/my_jobs_button"
        app:srcCompat="@drawable/myprofile_icon"
        app:tint="@color/grey" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/employee_my_jobs_tabs"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_reactangle_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employee_home_toolbar"
        app:tabIndicatorColor="@color/themeColor"
        app:tabIndicatorFullWidth="true"
        app:tabSelectedTextColor="@color/themeColor"
        app:tabTextColor="@color/grey">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/ongoing_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ongoingTab"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="85dp" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/negotiating_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NegotiatingTab" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/history_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/historyTab" />
    </com.google.android.material.tabs.TabLayout>

    <ListView
        android:id="@+id/employer_my_jobs_ongoing"
        android:layout_width="350dp"
        android:layout_height="540dp"
        android:layout_marginTop="@dimen/listViewConstraint"
        android:clickable="false"
        android:dividerHeight="@dimen/listViewDividerHeight"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employee_my_jobs_tabs"
        tools:listitem="@layout/fragment_employer_my_jobs_ongoing_list_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>