<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeHomeActivity">

<!--    <include layout="@layout/common_layout"/>-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/employee_home_toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/themeColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_avatar"
        android:layout_width="@dimen/toolbar_picture_size"
        android:layout_height="@dimen/toolbar_picture_size"
        android:layout_marginStart="@dimen/toolbar_photo_margin"
        android:layout_marginTop="@dimen/toolbar_photo_margin"
        android:background="@drawable/circle_white_background"
        android:contentDescription="@string/profile_avatar_description"
        app:layout_constraintStart_toEndOf="@+id/employee_home_toolbar"
        app:layout_constraintStart_toStartOf="@+id/employee_home_toolbar"
        app:layout_constraintTop_toTopOf="@+id/employee_home_toolbar"
        app:srcCompat="@drawable/sample_profile_photo" />

    <EditText
        android:id="@+id/search_edit_text"
        android:layout_width="@dimen/toolbar_search_width"
        android:layout_height="@dimen/toolbar_search_height"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:hint="@string/employee_toolbar_search_hint"
        android:inputType="text"
        android:paddingStart="@dimen/padding_start"
        android:paddingEnd="@dimen/padding_start"
        android:textSize="@dimen/toolbar_search_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/employee_home_toolbar"
        app:layout_constraintEnd_toStartOf="@+id/toolbar_filter_button"
        app:layout_constraintStart_toEndOf="@+id/profile_avatar"
        app:layout_constraintTop_toTopOf="@+id/employee_home_toolbar" />

    <ImageButton
        android:id="@+id/toolbar_filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:src="@drawable/baseline_tune_24"
        app:layout_constraintBottom_toBottomOf="@+id/search_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/search_edit_text"
        app:layout_constraintTop_toTopOf="@+id/search_edit_text" />
</androidx.constraintlayout.widget.ConstraintLayout>