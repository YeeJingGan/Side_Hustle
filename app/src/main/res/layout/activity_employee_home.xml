<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeHomeActivity">

    <include layout="@layout/common_layout" />

    <TextView
        android:id="@+id/employer_home_title_approved_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/title_approved_jobs"
        app:layout_constraintBottom_toTopOf="@+id/employer_home_divider_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/employer_home_button_expand_1" />

    <ImageButton
        android:id="@+id/employer_home_button_expand_1"
        android:layout_width="@dimen/backButtonWidthHeight"
        android:layout_height="@dimen/button_width_height"
        android:layout_marginTop="@dimen/employer_home_constraint"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/button_description_expand_less"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_expand_less"
        app:tint="@color/grey" />

    <View
        android:id="@+id/employer_home_divider_1"
        android:layout_width="391dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_home_button_expand_1" />

    <ListView
        android:id="@+id/employer_home_listview_approved_jobs"
        android:layout_width="350dp"
        android:layout_height="540dp"
        android:layout_marginTop="@dimen/list_view_constraint"
        android:clickable="false"
        android:dividerHeight="@dimen/listViewDividerHeight"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_home_divider_1"
        tools:listitem="@layout/fragment_employer_home_approved_jobs"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/employer_home_title_pending_approval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/title_pending_approval"
        app:layout_constraintBottom_toTopOf="@+id/employer_home_divider_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/employer_home_button_expand_2" />

    <ImageButton
        android:id="@+id/employer_home_button_expand_2"
        android:layout_width="@dimen/backButtonWidthHeight"
        android:layout_height="@dimen/backButtonWidthHeight"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/button_description_expand_less"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_home_listview_approved_jobs"
        app:srcCompat="@drawable/ic_expand_less"
        app:tint="@color/grey" />

    <View
        android:id="@+id/employer_home_divider_2"
        android:layout_width="391dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_home_button_expand_2" />

    <ListView
        android:id="@+id/employer_home_listview_pending_approval"
        android:layout_width="350dp"
        android:layout_height="540dp"
        android:layout_marginTop="@dimen/list_view_constraint"
        android:clickable="false"
        android:dividerHeight="@dimen/listViewDividerHeight"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_home_divider_2"
        tools:listitem="@layout/fragment_employer_home_approved_jobs"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/employer_home_button_upload"
        android:layout_width="@dimen/button_width_height"
        android:layout_height="@dimen/button_width_height"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/circle_white_background"
        android:backgroundTint="@color/themeColor"
        android:contentDescription="@string/button_description_upload_job"
        android:padding="20dp"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>